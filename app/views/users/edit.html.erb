<h1 class="mb-4">Edit your account </h1>
<%= render "errors" %>
   
<%= form_with model: @user, data: { turbo: false } do |form| %>
  <div class="mb-4"> 
    <%= form.label :name%>
    <%= form.text_field :name, class:"form-control"%>
  </div>
  <div class="mb-4">
    <%= form.label :email%>
    <%= form.text_field :email, class:"form-control"%>
  </div>
  <%= form.submit "Save", class:"btn btn-outline-primary"%>
<% end %>
</div>
<hr class="mt-4 mb-3">
<div>
  <%= link_to 'Change password', change_password_path, class:"link-text" %>
</div>