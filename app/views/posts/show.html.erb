<div class="mb-4">
  <h1 class="mb-4"><%= @post.title %></h1>
  <p class="mb-4"><%= @post.body %></p>
  <div>
    <small>
      Posted <%= time_tag @post.created_at, "data-local":"time-ago" %> by <%= @post.user&.name || "Deleted User" %>
    </small>
  </div>
  <% if can? :crud, @post %>
    <div class="d-flex mt-4">
      <%= link_to "Edit this post", edit_post_path(@post), class:"btn btn-outline-primary me-3" %> 
      <%= button_to "Delete", @post, method: :delete, form: { data: {turbo_confirm: "Are you sure?" } }, class:"btn btn-outline-danger" %>
    </div>
  <% end %>
</div>
<hr />

<div>
  <h4>Write Comment</h4>
  <% if @comment.errors.any? %>
    <div class="alert alert-danger">
      <h5>
        <%= pluralize(@comment.errors.count, "error") %> prohibited this comment
        from being saved:
      </h5>
      <ul class="m-0">
        <% @comment.errors.each do |error| %>
        <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_with(model:[@post, @comment]) do |f| %>
    <div class="mb-3">
      <%= f.text_area :body, class:"form-control", disabled: !user_signed_in? %>
    </div>
    <% if user_signed_in? %>
      <%= f.submit "Submit", class:"btn btn-outline-primary" %> 
    <% else %>
      <%= link_to "Sign In", login_path, class:"btn btn-outline-primary" %>
      or
      <%= link_to "Sign Up", signup_path, class:"btn btn-outline-primary" %>
    <% end %>
  <% end %>
</div>

<% if @comments.any? %>
  <div class="mt-4">
   <h4><%= pluralize(@comments.count, "Comment") %></h4>
    <% @comments.each do |comment| %>
    <div id="<%= dom_id(comment) %>" class="my-3">
      <div><%= comment.body %></div>
      <small class="d-flex">
        <span>
        By <%=  comment.user&.name || "Deleted User" %>, 
        <%= time_tag comment.created_at, "data-local":"time-ago" %>
        </span>
        <% if can? :destroy, comment %>
          <span class="mx-1">Â·</span>
          <%= button_to "Delete", post_comment_path(@post, comment), method:
          :delete, form: { data: { turbo_confirm: "Are you sure?" } }, class:
          "link-primary link-btn" %>
        <% end %>
      </small>
      <hr />
    </div>
    <% end %>
  </div>
<% end %>
