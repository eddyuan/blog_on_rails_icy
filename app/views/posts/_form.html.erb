<%# Because tuobo does not allow same page redirection after rails 7, disable turbo to show error %>
<%= form_with model: @post, data: { turbo: false } do |form| %>
  <% if @post.errors.any? %>
    <div class="alert alert-danger">
      <h5><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h5>
      <ul class="m-0">
        <% @post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="mb-4">
    <%= form.label :title %>
    <%= form.text_field :title, class:"form-control" %>
  </div>
  <div class="mb-4">
    <%= form.label :body %>
    <%= form.text_area :body, class:"form-control" %>
  </div>
  <%= form.submit button, class:"btn btn-outline-primary" %> 
<% end %>
